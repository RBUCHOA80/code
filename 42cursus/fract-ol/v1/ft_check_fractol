#include "./fractol.h"

int	ft_check_fractal(t_data *exec, double nbr_real, double nbr_imaginary)
{
	int	nb_iter;

	if (exec->set == MANDELBROT)
		nb_iter = mandelbrot(nbr_real, nbr_imaginary);
	else if (exec->set == JULIA)
		nb_iter = julia(exec, nbr_real, nbr_imaginary);
	else if (exec->set == BURNING_SHIP)
		nb_iter = burning_ship(nbr_real, nbr_imaginary);
	else if (exec->set == TRICORN)
		nb_iter = tricorn(nbr_real, nbr_imaginary);
	return (nb_iter);
}
