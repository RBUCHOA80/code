MAKEFLAGS = --silent

ARG = 113 3 346 7 0 -41 685 765 797

run:
	gcc *.c
	./a.out $(ARG)
	rm a.out
	
vrun:
	gcc *.c
	valgrind --leak-check=full -v -s ./a.out $(ARG)
	rm a.out
	